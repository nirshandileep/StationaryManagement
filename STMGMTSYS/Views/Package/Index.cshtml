@model IEnumerable<STMGMTSYS.Models.PackageModel>
@{
    ViewBag.Title = "Index";
}
<h2>
    Index</h2>
@using (Html.BeginForm("Index", "Package"))
{
    <div>
        <p>
            <b>Search:</b>
        </p>
        <br />
        <label>
            Name :</label>
        <input id="name" type="text" name="name" />
        <label>
            Item :</label>
        @Html.DropDownList("Items",ViewBag.Items as SelectList)
        <label>
            Is Active :</label>
        <input id="active" type="checkbox" name="active" />
        <br />
        <input type="submit" id="Search" value="Search" />
    </div>
}
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.PackageCode)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PackageName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Item.ItemCode)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.QtyPerPack)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsActive)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreatedBy)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreatedDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UpdatedBY)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UpdatedDate)
        </th>
        <th>
        </th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PackageCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PackageName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Item.ItemCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.QtyPerPack)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsActive)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedBy)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UpdatedBY)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UpdatedDate)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.PackageID }) |
                @Html.ActionLink("Details", "Details", new { id = item.PackageID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.PackageID }, new
           {
               onclick = "return confirm('Are you sure you wish to delete the package : " +
                          item.PackageCode + "?' );"
           })
            </td>
        </tr>
    }
</table>
